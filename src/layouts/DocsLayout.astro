---
// src/layouts/DocsLayout.astro
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<BaseLayout title={title}>
  <div class="docs-container">
    <aside class="sidebar">
      <slot name="sidebar" />
    </aside>

    <main class="content">
      <slot />
    </main>

    <aside class="toc">
      <slot name="toc" />
    </aside>
  </div>
</BaseLayout>

<style>
  .docs-container {
    display: grid;
    grid-template-columns: 250px 1fr 200px;
    max-width: 1400px;
    margin: 0 auto;
    gap: 2rem;
    padding: 2rem;
  }

  .sidebar {
    position: sticky;
    top: 80px;
    height: fit-content;
  }

  .content {
    min-width: 0;
  }

  .toc {
    position: sticky;
    top: 80px;
    height: fit-content;
  }

  @media (max-width: 1024px) {
    .docs-container {
      grid-template-columns: 1fr;
    }

    .toc {
      display: none;
    }
  }
</style>