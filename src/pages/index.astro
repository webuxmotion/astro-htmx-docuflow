---
// src/pages/index.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/Button.astro';
---

<BaseLayout title="Головна">
  <main class="hero">
    <h1>Документація, яка працює</h1>
    <p class="tagline">
      Створюйте красиву документацію для ваших проектів
      з Astro та HTMX
    </p>

    <div class="actions">
      <Button href="/docs/getting-started">
        Почати роботу
      </Button>
      <Button variant="outline" href="/docs">
        Переглянути документацію
      </Button>
    </div>
  </main>
</BaseLayout>

<style>
  .hero {
    max-width: 800px;
    margin: 0 auto;
    padding: 6rem 2rem;
    text-align: center;
  }

  h1 {
    font-size: 3.5rem;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    background: linear-gradient(135deg, #667eea, #764ba2);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .tagline {
    font-size: 1.25rem;
    color: #6b7280;
    margin-bottom: 2.5rem;
  }

  .actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }
</style>